<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_tableNoTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table No. : "
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_tableNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@id/tv_tableNoTag"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_tableNoTag"
        />

    <TextView
        android:id="@+id/tv_tableStatusTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Status : "
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/tv_tableNoTag"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_tableStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="inActive"
        app:layout_constraintLeft_toRightOf="@id/tv_tableStatusTag"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_tableStatusTag"
        />

    <Button
        android:id="@+id/btn_marking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark As InActive"
        android:background="#FF0000"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_capacity"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />

    <TextView
        android:id="@+id/tv_cidtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CID : "
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_tableStatusTag"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_cid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cid00"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tv_cidtag"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_cidtag"/>

    <TextView
        android:id="@+id/tv_capacityTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Capacity : "
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_cidtag"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tv_capacityTag"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_capacityTag"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_marking"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>