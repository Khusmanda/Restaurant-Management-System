<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_cid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUSTOMIZE MENU DETAILS"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/cd_menu_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Name"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/tv_cid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/cd_menu_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Price"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/cd_menu_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/cd_menu_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Menu Log"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/cd_menu_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:theme="@style/Theme.MaterialComponents.Light"
        android:id="@+id/btn_cd_submit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:cornerRadius="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toBottomOf="@id/cd_menu_log"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>